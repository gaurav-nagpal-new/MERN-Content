// select database
use todos;

// CRUD operations

// create

insertOne
db.todos.insertOne({"name":"sleep", "status":"sleep for 1 day"});

insertMany
db.todos.insertMany([{"name":"sleep", "status":"sleep for 1 day"},{"name":"eat", "status":"eat for 1 day"}]);

// read

all
db.todos.find();

with filter
db.todos.find({_id:ObjectId('689b432d8a9aa1c4d57c88de')});

// update
db.todos.updateOne({_id:ObjectId('689b432d8a9aa1c4d57c88de')}, {$set:{"status":"eat for 2 days"}});

// delete
db.todos.deleteOne({_id:ObjectId('68989cd1847cc695af8b25cd')});